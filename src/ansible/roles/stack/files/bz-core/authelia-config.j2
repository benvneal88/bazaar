theme: dark

server:
  host: 0.0.0.0
  port: 9091

log:
  level: debug

default_redirection_url: https://auth.bazaarlab.net


jwt_secret: "supersecretjwt"

session:
  name: authelia_session
  domain: bazaarlab.net
  same_site: lax
  secret: "supersecretsession"
  expiration: 1h
  inactivity: 30m
  remember_me_duration: 1M

storage:
  encryption_key: "supersecretstorage"
  postgres:
    host: postgres
    database: authelia
    username: authelia
    password: "USE_SWARM_SECRET"

access_control:
  default_policy: deny
  rules:
    - domain: "*.bazaarlab.net"
      policy: one_factor
      subject: ["group:admins"]
    - domain: "deny.bazaarlab.net"
      policy: deny


