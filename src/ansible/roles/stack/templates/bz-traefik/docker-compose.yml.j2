version: "3.8"

services:
  reverse-proxy:
    image: traefik:v3.0
    networks:
      - {{ swarm_traefik_network_name }}
    secrets:
      - cloudflare_cert.pem
      - cloudflare_key.key
      - origin_ca_rsa_root.pem
    command:
      - --providers.file.directory=/run/secrets/
      - --providers.file.watch=true
    volumes:
      - "/var/run/docker.sock:/var/run/docker.sock:ro"
      - "{{ swarm_manager_build_directory }}/{{ item.stack_name }}/traefik.yml:/etc/traefik/traefik.yml:ro"
      - "{{ swarm_manager_build_directory }}/{{ item.stack_name }}/dynamic_conf.yml:/etc/traefik/dynamic_conf.yml:ro"
    ports:
      - "80:80"     # HTTP Traffic
      - "443:443"   # HTTPS Traffic
      - "8080:8080" # Traefik Dashboard
    deploy:
      mode: replicated
      replicas: 1
      restart_policy:
        condition: on-failure
        max_attempts: 10
      placement:
        constraints:
          - "node.role==manager"
      labels:
        - "traefik.enable=true"
        - "traefik.http.routers.api.rule=Host(`traefik.bazaarlab.net`)"
        - "traefik.http.routers.api.entrypoints=websecure"
        - "traefik.http.routers.api.service=api@internal"
        - "traefik.http.routers.api.middlewares=auth"
        - "traefik.http.middlewares.auth.basicauth.users={{ traefik_dashboard_auth }}"
        - "traefik.http.services.api.loadbalancer.server.port=80"
        - "traefik.http.routers.api.tls=true"
        - "traefik.http.routers.api.tls.domains[0].main=bazaarlab.net"
        - "traefik.http.routers.api.tls.domains[0].sans=*.bazaarlab.net"

networks:
  {{ swarm_traefik_network_name }}:
    driver: overlay

secrets:
  cloudflare_cert.pem:
    external: true
  cloudflare_key.key:
    external: true
  origin_ca_rsa_root.pem:
    external: true